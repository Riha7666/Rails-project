<p id="notice"><%= notice %></p>

<h1>Employers</h1>

<table border='2px' class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Experience</th>
      <th>Specialization</th>
      <th>Timing</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employers.each do |employer| %>
      <tr>
        <td><%= employer.name %></td>
        <td><%= employer.age %></td>
        <td><%= employer.experience %></td>
        <td><%= employer.specialization %></td>
        <td><%= employer.timing %></td>
        <td><%= link_to 'Edit', edit_employer_path(employer),class: 'btn btn-primary'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="apple_pagination">
<%= will_paginate @employers %>
</div>

<br>

<%= link_to 'New Employer', new_employer_path,class: 'btn btn-primary' %>
